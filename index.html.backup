<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Piper Web TTS</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #008080;
      color: white;
      text-align: center;
      padding: 20px;
      margin: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    .container {
      background-color: rgba(255, 255, 255, 0.1);
      padding: 20px;
      border-radius: 10px;
      width: 90%;
      max-width: 500px;
    }
    textarea {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border-radius: 5px;
    }
    button {
      background-color: #FF6B6B;
      color: white;
      border: none;
      padding: 12px 20px;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Piper Web TTS</h1>
    <textarea id="text" rows="4" placeholder="Enter text here"></textarea><br>
    <label for="model">Select Model:</label>
    <select id="model">
      <option value="nepali">Nepali</option>
      <option value="english">English</option>
    </select><br><br>
    <button id="speakBtn">Speak</button>
  </div>

  <script>
    document.getElementById('speakBtn').addEventListener('click', async function() {
      const text = document.getElementById("text").value;
      const model = document.getElementById("model").value;
      
      try {
        // Use your laptop's LAN IP address here
        const response = await fetch("http://192.168.88.24:5000/speak", {
          method: "POST",
          headers: { 
            "Content-Type": "application/json",
            "Accept": "application/json"
          },
          body: JSON.stringify({ text, model })
        });
        
        const result = await response.json();
        alert(result.status || "Audio played successfully");
      } catch (error) {
        alert("Error: " + error.message);
      }
    });
  </script>
</body>
</html>
